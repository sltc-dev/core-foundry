#!/bin/bash

# 获取提交信息内容
commit_msg=$(cat "$1")

# 定义常规提交规范的正规表达式
# 格式: <type>(<scope>): <subject>
# type: feat|fix|docs|style|refactor|test|chore|revert|perf|build|ci
pattern="^(feat|fix|docs|style|refactor|test|chore|revert|perf|build|ci)(\(.*\))?!?: .+"

if [[ ! $commit_msg =~ $pattern ]]; then
    echo -e "\033[31m[错误] 不符合约定式提交规范！\033[0m"
    echo -e "正确的格式例：\033[32mfeat: 增加新功能\033[0m"
    echo -e "            \033[32mfix(api): 修复接口错误\033[0m"
    echo -e "允许的类型: feat, fix, docs, style, refactor, test, chore, revert, perf, build, ci"
    exit 1
fi
